                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>codehaus snapshots</id>
            <url>http://snapshots.maven.codehaus.org/maven2</url>
        </repository>
