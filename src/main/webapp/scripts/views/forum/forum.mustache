<div class ="forumContent">
    {{#storyFull}}
    <div class="forumTitle">
        {{story.title}}
    </div>
    <div class="forumText">
        {{chapterText}}
    </div>
    <div class="forumUser">
        <a href="#user/{{echoedUser.screenName}}" class="forumUserText">
            {{echoedUser.name}}
        </a>
        <img class="forumUserImage" height="35px" width="35px" src="{{ profilePhotoUrl }}"/>
    </div>
    <div class="forumFooter">
        <span class="forumComments">
            {{comments.length}} Comments
        </span>
        <a href="#partner/{{partner.handle}}" class="forumPartner">
            {{partner.name}}
        </a>
    </div>
    {{/storyFull}}
</div>