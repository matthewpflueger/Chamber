<h2>Moderate Stories</h2>
<table id="moderate-table">
    <thead>
    <tr>
        <th class="moderate-header">Story Name</th>
        <th class="moderate-header">Author</th>
        <th class="moderate-header"># Chapters</th>
        <th class="moderate-header"># Images</th>
        <th class="moderate-header"># Comments</th>
        <th class="moderate-header"># Views</th>
        <th class="moderate-header">Hide Story</th>
        <th class="moderate-header"></th>
    </tr>
    </thead>
    <tbody>
        {{#stories}}
        <tr>
            <td>
                {{ title }}
            </td>
            <td>
                {{ echoedUser.name }}
            </td>
            <td align="right">
                {{ chapters.length }}
            </td>
            <td align="right">
                {{ chapterImages.length }}
            </td>
            <td align="right">
                {{ comments.length }}
            </td>
            <td align="right">
                {{ views }}
            </td>
            <td align="center">
                <input class="moderate-cb" id="{{ id }}" storyOwnerId="{{ echoedUser.id }}" type="checkbox" {{#isEchoedModerated}}checked="checked"{{/isEchoedModerated}} />
            </td>
            <td>
                <span storyId="{{ id }}" class="moderate-preview">Preview Story</span>
            </td>
        </tr>
        {{/stories}}
    </tbody>
</table>