<div id="breadcrumbs">
    Seeds Now! → Basil
</div>
<div id="title" class="clearfix">
    {{#context}}
    <div id="title-header">
        <span id="title-text">
                <!--Seeds Now! → Basil-->
                {{ title }}
        </span>
        <a id="title-action-button" href="#">Add Story</a>
    </div>
    <div id="title-body" class="clearfix">
        <div id="title-photo">

        </div>
        <div id="title-actions" style="float:left">
            <div id="title-follow" style="float: right;"></div>
        </div>
        {{#echoedUser}}
            <div id="title-stats">
                <!--<div class="title-label">Statistics</div>-->
                <ul>
                    <li><span class="title-stats-label">Views</span><span class="title-stats-text">{{views}}</span></li>
                    <li><span class="title-stats-label">Votes</span><span class="title-stats-text">{{votes}}</span></li>
                    <li><span class="title-stats-label">Comments</span><span class="title-stats-text">{{comments}}</span></li>
                    <li><span class="title-stats-label">Followers</span><span class="title-stats-text">{{followers}}</span></li>
                    <li><span class="title-stats-label">Following</span><span class="title-stats-text">{{following}}</span></li>
                </ul>
            </div>
            <div id="title-content">
                <!--<div class="title-label">Top Content</div>-->
                <ul>
                    {{#mostViewed}}<li><span class="title-content-label">Most Viewed</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostViewed}}
                    {{#mostCommented}}<li><span class="title-content-label">Most Commented</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostCommented}}
                    {{#mostVoted}}<li><span class="title-content-label">Most Voted</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostVoted}}
                </ul>
            </div>
        {{/echoedUser}}
        {{#partner}}
        <div id="title-stats" >
            <!--<div class="title-label">Top Content</div>-->
            <ul>
                <li><span class="title-stats-label">Views</span><span class="title-stats-text">{{views}}</span></li>
                <li><span class="title-stats-label">Votes</span><span class="title-stats-text">{{votes}}</span></li>
                <li><span class="title-stats-label">Comments</span><span class="title-stats-text">{{comments}}</span></li>
                <li><span class="title-stats-label">Followers</span><span class="title-stats-text">{{followers}}</span></li>
            </ul>
        </div>
        <div id="title-content" >
            <!--<div class="title-label">Top Content</div>-->
            <ul>
                {{#mostViewed}}<li><span class="title-content-label">Most Viewed</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostViewed}}
                {{#mostCommented}}<li><span class="title-content-label">Most Commented</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostCommented}}
                {{#mostVoted}}<li><span class="title-content-label">Most Voted</span><a class="title-content-text" href="#!story/{{story.id}}">{{story.title}}</a></li>{{/mostVoted}}
            </ul>
        </div>
        {{/partner}}

    </div>
    <div id="title-nav" class="clearfix">
        <ul>
            {{#contentCount}}
                <li><a href="#{{baseUrl}}{{endPoint}}">{{name}}: {{count}}</a></li>
            {{/contentCount}}
        </ul>
    </div>
    {{/context}}
</div>