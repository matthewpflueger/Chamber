<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
	    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	    xmlns:context="http://www.springframework.org/schema/context"
	    xmlns:util="http://www.springframework.org/schema/util"
	    xsi:schemaLocation="
	        http://www.springframework.org/schema/beans
	        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	        http://www.springframework.org/schema/context
	        http://www.springframework.org/schema/context/spring-context-3.0.xsd
	        http://www.springframework.org/schema/util
	        http://www.springframework.org/schema/util/spring-util-3.0.xsd"
	    default-init-method="init"
	    default-destroy-method="destroy">


    <!--suppress SpringModelInspection -->
    <context:property-placeholder
                location="classpath:servlet-context.properties"
                ignore-resource-not-found="true"
                properties-ref="servletContextProperties"/>
    <!--suppress SpringModelInspection -->
    <util:properties id="servletContextProperties">
        <prop key="apiUrl">http://v1-api.echoed.com</prop>
        <prop key="cdnUrl">http://v1-cdn.echoed.com</prop>

        <prop key="mustache.cache">true</prop>
        <prop key="mustache.prefix">${cdnUrl}/</prop>
        <prop key="mustache.suffix">.html</prop>

        <prop key="echoUrl">${apiUrl}/echo</prop>
        <prop key="echoItUrl">${apiUrl}/echo/it</prop>
        <prop key="buttonUrl">${apiUrl}/echo/button</prop>
        <prop key="closetUrl">${apiUrl}/closet</prop>

        <prop key="buttonViewUrl">${cdnUrl}/button_echoed.png</prop>
        <prop key="loginViewUrl">${cdnUrl}/login.html</prop>
        <prop key="errorViewUrl">${cdnUrl}/error.html</prop>
        <prop key="closetViewUrl">${cdnUrl}/user.html</prop>

        <prop key="twitterController.loginRedirectUrl">http://www.twitter.com</prop>

        <prop key="confirmViewUrl">${cdnUrl}/confirm.html</prop>


        <prop key="twitterLoginErrorViewUrl">${cdnUrl}/twitter_login_error.html</prop>
        <prop key="facebookLoginErrorViewUrl">${cdnUrl}/facebook_login_error.html</prop>
        <prop key="dashboardViewUrl">${cdnUrl}/dashboard.html</prop>

        <prop key="exhibitUrl">${apiUrl}/closet/exhibit</prop>
        <prop key="friendsUrl">${apiUrl}/closet/friends</prop>
    </util:properties>

</beans>
