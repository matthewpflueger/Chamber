<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.PartnerSettingsDao">

    <cache-ref namespace="com.echoed.chamber.dao.cache.Default" />

    <resultMap id="partnerSettingsResult" type="com.echoed.chamber.domain.PartnerSettings">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="partnerId" javaType="String" />
            <arg column="closetPercentage" javaType="_float" />
            <arg column="minClicks" javaType="_int" />
            <arg column="minPercentage" javaType="_float" />
            <arg column="maxClicks" javaType="_int" />
            <arg column="maxPercentage" javaType="_float" />
            <arg column="echoedMatchPercentage" javaType="_float" />
            <arg column="echoedMaxPercentage" javaType="_float" />
            <arg column="creditWindow" javaType="_int" />
            <arg column="activeOn" javaType="Date" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="partnerSettingsResult">
        select * from PartnerSettings where id=#{id}
    </select>

    <select id="findByPartnerId" resultMap="partnerSettingsResult">
        select * from PartnerSettings where partnerId=#{partnerId}
    </select>

    <select id="findByActiveOn" resultMap="partnerSettingsResult" >
        select *
        from PartnerSettings
        where partnerId = #{partnerId}
        and activeOn &lt;= #{activeOn}
        order by activeOn desc
        limit 1
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.PartnerSettings">
        insert into PartnerSettings(
    			id,
    			createdOn,
    			partnerId,
                closetPercentage,
                minClicks,
                minPercentage,
                maxClicks,
                maxPercentage,
                echoedMatchPercentage,
                echoedMaxPercentage,
                creditWindow,
                activeOn)
    	values (
    			#{id},
    			#{createdOn},
    			#{partnerId},
                #{closetPercentage},
                #{minClicks},
                #{minPercentage},
                #{maxClicks},
                #{maxPercentage},
                #{echoedMatchPercentage},
                #{echoedMaxPercentage},
                #{creditWindow},
                #{activeOn})
    </insert>

    <delete id="deleteByPartnerId">
        delete from PartnerSettings where partnerId=#{partnerId}
    </delete>

    <delete id="deleteById">
        delete from PartnerSettings where id=#{id}
    </delete>

</mapper>
