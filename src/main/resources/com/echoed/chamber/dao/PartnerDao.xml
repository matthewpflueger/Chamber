<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.PartnerDao">

    <cache-ref namespace="com.echoed.chamber.dao.cache.Default" />

    <resultMap id="partnerResult" type="com.echoed.chamber.domain.Partner">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="name" javaType="String" />
            <arg column="website" javaType="String" />
            <arg column="phone" javaType="String" />
            <arg column="hashTag" javaType="String" />
            <arg column="logo" javaType="String" />
            <arg column="secret" javaType="String" />
            <arg column="category" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="partnerResult">
        select * from Partner where id = #{id}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.Partner">
        insert into Partner(
    			id,
    			createdOn,
                name,
                website,
                phone,
                hashTag,
                logo,
                secret,
                category)
    	values (
    			#{id},
    			#{createdOn},
                #{name},
                #{website},
                #{phone},
                #{hashTag},
                #{logo},
                #{secret},
                #{category})
    </insert>

    <delete id="deleteById">
        delete from Partner where id=#{id}
    </delete>

    <delete id="deleteByName">
        delete from Partner where name=#{name}
    </delete>

</mapper>
