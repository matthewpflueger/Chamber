<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.ShopifyPartnerDao">

    <resultMap id="shopifyPartnerResult" type="com.echoed.chamber.domain.shopify.ShopifyPartner">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="shopifyId" javaType="String" />
            <arg column="domain" javaType="String" />
            <arg column="name" javaType="String" />
            <arg column="zip" javaType="String" />
            <arg column="shopOwner" javaType="String" />
            <arg column="email" javaType="String" />
            <arg column="phone" javaType="String"/>
            <arg column="country" javaType="String" />
            <arg column="city" javaType="String" />
            <arg column="shopifyDomain" javaType="String" />
            <arg column="password" javaType="String" />
            <arg column="partnerId" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findByPartnerId" resultMap="shopifyPartnerResult">
        select * from ShopifyPartner where partnerId=#{partnerId}
    </select>
    
    <select id="findByShopifyId" resultMap="shopifyPartnerResult">
        select * from ShopifyPartner where shopifyId=#{shopifyId}
    </select>

    <select id="findByDomain" resultMap="shopifyPartnerResult">
        select * from ShopifyPartner where domain=#{domain}
    </select>

    <select id="findByShopifyDomain" resultMap="shopifyPartnerResult">
        select * from ShopifyPartner where shopifyDomain=#{shopifyDomain}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.shopify.ShopifyPartner">
    	insert into ShopifyPartner(
    			id,
    			updatedOn,
    			createdOn,
    			shopifyId,
    			domain,
    			name,
    			zip,
    			shopOwner,
    			email,
    			phone,
    			country,
    			city,
    			shopifyDomain,
    			password,
    			partnerId)
    		values (
    			#{id},
    			#{updatedOn},
    			#{createdOn},
    			#{shopifyId},
    			#{domain},
    			#{name},
    			#{zip},
    			#{shopOwner},
    			#{email},
    			#{phone},
    			#{country},
    			#{city},
    			#{shopifyDomain},
    			#{password},
    			#{partnerId})
    </insert>

    <update id="update" parameterType="com.echoed.chamber.domain.shopify.ShopifyPartner">
        update ShopifyPartner set
            name = #{name},
            email = #{email},
            phone = #{phone},
            city = #{city},
            country = #{country},
            zip = #{zip},
            password = #{password}
        where id = #{id}
    </update>
</mapper>

