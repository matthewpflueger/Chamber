<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.TwitterUserDao">

    <resultMap id="twitterUserResult" type="com.echoed.chamber.domain.TwitterUser">
        <constructor>
            <idArg column="id" javaType="String"/>
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="echoedUserId" javaType="String"/>
            <arg column="twitterId" javaType="String"/>
            <arg column="screenName" javaType="String"/>
            <arg column="name" javaType="String"/>
            <arg column="profileImageUrl" javaType="String"/>
            <arg column="location" javaType="String"/>
            <arg column="timezone" javaType="String"/>
            <arg column="accessToken" javaType="String"/>
            <arg column="accessTokenSecret" javaType="String"/>
        </constructor>
    </resultMap>


    <insert id="insert" parameterType="com.echoed.chamber.domain.TwitterUser">
        insert into TwitterUser(
            id,
            createdOn,
            echoedUserId,
            twitterId,
            screenName,
            name,
            profileImageUrl,
            location,
            timezone,
            accessToken,
            accessTokenSecret)
        values(
            #{id},
            #{createdOn},
            #{echoedUserId},
            #{twitterId},
            #{screenName},
            #{name},
            #{profileImageUrl},
            #{location},
            #{timezone},
            #{accessToken},
            #{accessTokenSecret})
   </insert>
    
    <select id="findByTwitterId" resultMap="twitterUserResult">
        select * from TwitterUser where twitterId = #{twitterId}
    </select>

    <select id="findById" resultMap="twitterUserResult">
    	select * from TwitterUser where id = #{id}
    </select>

    <select id="findByScreenName" resultMap="twitterUserResult">
    	select * from TwitterUser where screenName = #{screenName}
    </select>

    <update id="updateEchoedUser" parameterType="com.echoed.chamber.domain.TwitterUser">
        update TwitterUser set
            echoedUserId=#{echoedUserId}
        where
            id=#{id}
    </update>

    <delete id="deleteById">
        delete from TwitterUser where id = #{id}
    </delete>

    <delete id="deleteByScreenName">
        delete from TwitterUser where screenName = #{screenName}
    </delete>

</mapper>
