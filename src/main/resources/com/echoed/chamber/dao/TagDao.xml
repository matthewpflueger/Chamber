<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.TagDao">

    <resultMap id="tagResult" type="com.echoed.chamber.domain.Tag">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="counter" javaType="_int" />
            <arg column="approved" javaType="_boolean"/>
        </constructor>
    </resultMap>

    <insert id="insert" parameterType="com.echoed.chamber.domain.Tag">
        insert into Tag(
            id,
            counter,
            approved
        ) values (
            #{id},
            #{counter},
            #{approved}
        )
        on duplicate key update
            counter = #{counter},
            approved = #{approved}
    </insert>



    <update id="update" parameterType="com.echoed.chamber.domain.Tag">
        update Tag
        set
            counter = #{counter},
            approved = #{approved}
        where
            id = #{id}
    </update>

    <select id="getTags" resultMap="tagResult">
        select * from Tag order by id asc
    </select>

</mapper>