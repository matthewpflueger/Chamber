<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.EchoedUserDao">
    <resultMap id="echoedUserResult" type="com.echoed.chamber.domain.EchoedUser">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
			<arg column="createdOn" javaType="Date" />
            <arg column="name" javaType="String" />
			<arg column="email" javaType="String" />
            <arg column="screenName" javaType="String" />
            <arg column="facebookUserId" javaType="String" />
			<arg column="twitterUserId" javaType="String" />
        </constructor>
    </resultMap>


    <select id="findById" resultMap="echoedUserResult">
    	select * from EchoedUser where id = #{id}
    </select>

    <select id="findByFacebookUserId" resultMap="echoedUserResult">
    	select * from EchoedUser where facebookUserId = #{facebookUserId}
    </select>

    <select id="findByTwitterUserId" resultMap="echoedUserResult">
        select * from EchoedUser where twitterUserId = #{twitterUserId}
    </select>

    <select id="findByFacebookId" resultMap="echoedUserResult">
        select EU.*
        from EchoedUser EU
        join FacebookUser FU on EU.facebookUserId = FU.id
        where FU.facebookId = #{facebookId}
    </select>

    <select id="findByTwitterId" resultMap="echoedUserResult">
        select EU.*
        from EchoedUser EU
        join TwitterUser TU on EU.twitterUserId = TU.id
        where TU.twitterId = #{twitterId}
    </select>

    <select id="findByEmail" resultMap="echoedUserResult">
        select * from EchoedUser where email = #{email}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.EchoedUser">
    	insert into EchoedUser(
    	        id,
                createdOn,
    			name,
                email,
                screenName,
                facebookUserId,
                twitterUserId)
    		values (
                #{id},
                #{createdOn},
    			#{name},
    			#{email},
    			#{screenName},
                #{facebookUserId},
    			#{twitterUserId})
    </insert>

    <delete id="deleteByEmail">
        delete from EchoedUser where email = #{email}
    </delete>

    <delete id="deleteByScreenName">
        delete from EchoedUser where screenName = #{screenName}
    </delete>

</mapper>
