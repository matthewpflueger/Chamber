<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.partner.PartnerDao">

    <cache-ref namespace="com.echoed.chamber.dao.cache.Default" />

    <resultMap id="partnerResult" type="com.echoed.chamber.domain.partner.Partner">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="name" javaType="String" />
            <arg column="domain" javaType="String" />
            <arg column="phone" javaType="String" />
            <arg column="handle" javaType="String" />
            <arg column="logo" javaType="String" />
            <arg column="secret" javaType="String" />
            <arg column="category" javaType="String" />
            <arg column="cloudPartnerId" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="partnerResult">
        select * from Partner where id = #{id}
    </select>

    <select id="findByDomain" resultMap="partnerResult">
        select * from Partner where domain = #{domain}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.partner.Partner">
        insert into Partner(
    			id,
    			createdOn,
                name,
                domain,
                phone,
                handle,
                logo,
                secret,
                category,
                cloudPartnerId)
    	values (
    			#{id},
    			#{createdOn},
                #{name},
                #{domain},
                #{phone},
                #{handle},
                #{logo},
                #{secret},
                #{category},
                #{cloudPartnerId})
    </insert>

    <delete id="deleteById">
        delete from Partner where id=#{id}
    </delete>

    <delete id="deleteByName">
        delete from Partner where name=#{name}
    </delete>

    <update id="updateHandle">
        update Partner
        set handle = #{partnerHandle}
        where id = #{partnerId}
    </update>

    <update id="update" parameterType="com.echoed.chamber.domain.partner.Partner">
        update Partner set
            name = #{name},
            domain = #{domain},
            phone = #{phone},
            handle = #{handle},
            logo = #{logo},
            category = #{category}
        where id = #{id}
    </update>
</mapper>
