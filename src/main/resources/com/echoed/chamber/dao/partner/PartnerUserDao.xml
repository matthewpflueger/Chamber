<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.partner.PartnerUserDao">

    <cache-ref namespace="com.echoed.chamber.dao.cache.Default" />

    <resultMap id="partnerUserResult" type="com.echoed.chamber.domain.partner.PartnerUser">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="_long" />
            <arg column="createdOn" javaType="_long" />
            <arg column="partnerId" javaType="String" />
            <arg column="name" javaType="String" />
            <arg column="email" javaType="String" />
            <arg column="salt" javaType="String" />
            <arg column="password" javaType="String" />
        </constructor>
    </resultMap>


    <select id="findByEmail" resultMap="partnerUserResult">
        select * from PartnerUser where email = #{email}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.partner.PartnerUser">
        insert into PartnerUser(
    			id,
    			updatedOn,
    			createdOn,
    			partnerId,
                name,
                email,
                salt,
                password)
    	values (
    			#{id},
    			#{updatedOn}
    			#{createdOn},
    			#{partnerId},
                #{name},
                #{email},
                #{salt},
                #{password})
    </insert>


</mapper>
