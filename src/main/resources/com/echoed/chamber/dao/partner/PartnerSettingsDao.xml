<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.partner.PartnerSettingsDao">

    <cache-ref namespace="com.echoed.chamber.dao.cache.Default" />

    <resultMap id="partnerSettingsResult" type="com.echoed.chamber.domain.partner.PartnerSettings">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="_long" />
            <arg column="createdOn" javaType="_long" />
            <arg column="partnerId" javaType="String" />
            <arg column="closetPercentage" javaType="_float" />
            <arg column="minClicks" javaType="_int" />
            <arg column="minPercentage" javaType="_float" />
            <arg column="maxClicks" javaType="_int" />
            <arg column="maxPercentage" javaType="_float" />
            <arg column="echoedMatchPercentage" javaType="_float" />
            <arg column="echoedMaxPercentage" javaType="_float" />
            <arg column="creditWindow" javaType="_int" />
            <arg column="views" javaType="String" />
            <arg column="hashTag" javaType="String" />
            <arg column="couponCode"  javaType="String" />
            <arg column="couponDescription" javaType="String" />
            <arg column="couponExpiresOn" javaType="_long" />
            <arg column="activeOn" javaType="_long" />
            <arg column="storyPrompts" javaType="String" />
            <arg column="moderateAll" javaType="_boolean" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="partnerSettingsResult">
        select * from PartnerSettings where id=#{id}
    </select>

    <select id="findByPartnerId" resultMap="partnerSettingsResult">
        select * from PartnerSettings where partnerId=#{partnerId}
    </select>

    <select id="findByIdOrPartnerHandle" resultMap="partnerSettingsResult">
        select PS.*
        from PartnerSettings PS
            join Partner P on PS.partnerId = P.id
        where PS.id = #{id}
            or (P.handle = #{id} and PS.activeOn &lt;= now())
        order by PS.activeOn desc
        limit 1
    </select>

    <select id="findByActiveOn" resultMap="partnerSettingsResult" >
        select *
        from PartnerSettings
        where partnerId = #{partnerId}
        and activeOn &lt;= #{activeOn}
        order by activeOn desc
        limit 1
    </select>

    <select id="findInactive" resultMap="partnerSettingsResult">
        select *
        from PartnerSettings
        where partnerId = #{partnerId}
        and activeOn &gt;= #{activeOn}
        order by activeOn desc
        limit 1
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.partner.PartnerSettings">
        insert into PartnerSettings(
    			id,
    			createdOn,
    			partnerId,
                closetPercentage,
                minClicks,
                minPercentage,
                maxClicks,
                maxPercentage,
                echoedMatchPercentage,
                echoedMaxPercentage,
                creditWindow,
                views,
                hashTag,
                couponCode,
                couponDescription,
                couponExpiresOn,
                activeOn,
                storyPrompts,
                moderateAll)
    	values (
    			#{id},
    			#{createdOn},
    			#{partnerId},
                #{closetPercentage},
                #{minClicks},
                #{minPercentage},
                #{maxClicks},
                #{maxPercentage},
                #{echoedMatchPercentage},
                #{echoedMaxPercentage},
                #{creditWindow},
                #{views},
                #{hashTag},
                #{couponCode},
                #{couponDescription},
                #{couponExpiresOn},
                #{activeOn},
                #{storyPrompts},
                #{moderateAll})
    </insert>

    <delete id="deleteByPartnerId">
        delete from PartnerSettings where partnerId=#{partnerId}
    </delete>

    <delete id="deleteById">
        delete from PartnerSettings where id=#{id}
    </delete>

</mapper>
