<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.partner.bigcommerce.BigCommercePartnerDao">

    <resultMap id="bigCommercePartnerResult" type="com.echoed.chamber.domain.partner.bigcommerce.BigCommercePartner">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="name" javaType="String" />
            <arg column="email" javaType="String" />
            <arg column="phone" javaType="String" />
            <arg column="storeUrl" javaType="String" />
            <arg column="businessName" javaType="String" />
            <arg column="apiUser" javaType="String" />
            <arg column="apiPath" javaType="String" />
            <arg column="apiToken" javaType="String" />
            <arg column="partnerId" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findByPartnerId" resultMap="bigCommercePartnerResult">
        select * from BigCommercePartner where partnerId=#{partnerId}
    </select>
    
    <select id="findByStoreUrl" resultMap="bigCommercePartnerResult">
        select * from BigCommercePartner where storeUrl=#{storeUrl}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.partner.bigcommerce.BigCommercePartner">
    	insert into BigCommercePartner(
    			id,
    			updatedOn,
    			createdOn,
    			name,
    			email,
    			phone,
    			storeUrl,
    			businessName,
    			apiUser,
    			apiPath,
    			apiToken,
    			partnerId)
    		values (
    			#{id},
    			#{updatedOn},
    			#{createdOn},
    			#{name},
    			#{email},
    			#{phone},
    			#{storeUrl},
    			#{businessName},
    			#{apiUser},
    			#{apiPath},
    			#{apiToken},
    			#{partnerId})
    </insert>
</mapper>

