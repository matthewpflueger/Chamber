<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.EchoPossibilityDao">
    <resultMap id="echoPossibilityResult" type="com.echoed.chamber.domain.EchoPossibility">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="createdOn" javaType="Date" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="retailerId" javaType="String" />
            <arg column="customerId" javaType="String" />
			<arg column="productId" javaType="String" />
			<arg column="boughtOn" javaType="Date" />
			<arg column="step" javaType="String" />
            <arg column="orderId" javaType="String" />
            <arg column="price" javaType="_float" />
            <arg column="imageUrl" javaType="String" />
			<arg column="echoedUserId" javaType="String" />
            <arg column="echoId" javaType="String" />
            <arg column="landingPageUrl" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="echoPossibilityResult">
    	select * from EchoPossibility where id = #{id}
    </select>

    <select id="findByRetailerId" resultMap="echoPossibilityResult">
    	select * from EchoPossibility where retailerId = #{retailerId}
    </select>

    <select id="selectCount" resultType="long">
        select count(*) from EchoPossibility
    </select>

    <insert id="insertOrUpdate" parameterType="com.echoed.chamber.domain.EchoPossibility">
    	insert into EchoPossibility (
    			id,
    			createdOn,
    			retailerId,
                customerId,
    			productId,
    			boughtOn,
    			step,
                orderId,
                price,
                imageUrl,
                echoedUserId,
                echoId,
                landingPageUrl)
    	values (
    			#{id},
    			#{createdOn},
    			#{retailerId},
                #{customerId},
    			#{productId},
    			#{boughtOn},
    			#{step},
                #{orderId},
                #{price},
                #{imageUrl},
                #{echoedUserId},
                #{echoId},
                #{landingPageUrl})
        on duplicate key update
                step=#{step},
	    		echoedUserId=#{echoedUserId},
                echoId=#{echoId}
    </insert>

    <delete id="deleteById">
        delete from EchoPossibility where id = #{id}
    </delete>

    <delete id="deleteByRetailerId">
        delete from EchoPossibility where retailerId = #{retailerId}
    </delete>

</mapper>
