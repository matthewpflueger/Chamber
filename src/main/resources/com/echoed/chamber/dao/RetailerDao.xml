<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.echoed.chamber.dao.RetailerDao">
    <resultMap id="retailerResult" type="com.echoed.chamber.domain.Retailer">
        <constructor>
            <idArg column="id" javaType="String" />
            <arg column="updatedOn" javaType="Date" />
            <arg column="createdOn" javaType="Date" />
            <arg column="name" javaType="String" />
        </constructor>
    </resultMap>

    <select id="findById" resultMap="retailerResult">
        select * from Retailer where id = #{id}
    </select>

    <insert id="insert" parameterType="com.echoed.chamber.domain.Retailer">
        insert into Retailer(
    			id,
    			createdOn,
                name)
    	values (
    			#{id},
    			#{createdOn},
                #{name})
    </insert>

    <delete id="deleteById">
        delete from Retailer where id=#{id}
    </delete>

    <delete id="deleteByName">
        delete from Retailer where name=#{name}
    </delete>

</mapper>
